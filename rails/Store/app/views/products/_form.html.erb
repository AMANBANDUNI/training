<%= form_with model: @product do |form| %>
  
  <br>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <br>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <br>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <br>
  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
  <br>
  
<% end %>