<h1>Home Page</h1>
<br>
<% if user_signed_in? %>
  <h2> <strong><%= @user.name.capitalize %>'s Posts</strong> </h2>
  <% if @user.bio != nil %>
    <p><strong> <%= @user.name %>'s Bio: </strong> <%= @user.bio.description %> </p>
  <% else %>
  <% end %>

  <table>
    <thead>
  	  <th>Image Name</th>
  	  <th> ImageUrl</th>
    </thead>

    <tbody>
      <% @user.images.each do |post| %>
      <tr> 
        <td><%= post.name %></td>
        <td><%= post.url %></td> 
      </tr>
      <% end %> 
    </tbody>
  </table>

<br><br>
<%= link_to 'Edit', edit_user_registration_path %><br><br>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to 'Sign In', new_user_session_path %><br><br>
<%= link_to 'Sign Up', new_user_registration_path %>
<% end %>