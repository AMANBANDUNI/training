<%= form_with model: @product do |form| %>
  <br>
  <div>
  	<%= form.label :name %>
  	<%= form.text_field :name %>
  </div>

  <div>
  	<%= form.label :description %>
  	<%= form.text_field :description %>
  </div>

  <div>
  	<%= form.label :price %>
  	<%= form.number_field :price %>
  </div>

  <div>
  	<%= form.label :make %>
  	<%= form.number_field :make %>
  </div>
  
  <div>
  	<%= form.label :category_id %>
  	<%= form.text_field :category_id, type: 'number' %>
  </div>

  <br>
  <div>
  	<%= form.submit %>
  </div>

<% end %>